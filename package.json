{
  "name": "djura",
  "version": "1.0.0",
  "description": "Djura - Facebook Messenger bot for reminders",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "author": "Cherevan",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "prettier": "^1.14.3"
  },
  "prettier": {
    "bracketSpacing": true,
    "parser": "babylon",
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "root": true,
    "rules": {
      "prettier/prettier": "error",
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "config": "^3.1.0",
    "dialogflow": "^0.9.1",
    "express": "^4.17.3",
    "mongodb": "^3.2.7",
    "node-fetch": "^2.6.0",
    "pb-util": "^0.1.0",
    "pino": "^5.12.6",
    "pino-pretty": "^3.2.0",
    "request": "^2.88.0"
  }
}
